<ResourceDictionary
    x:Class="Fooxboy.MusicX.Uwp.DataTemplates.PlaylistDataTemplateCode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Fooxboy.MusicX.Uwp.Resources.Controls"
    xmlns:local="using:Fooxboy.MusicX.Uwp.DataTemplates"
    xmlns:models="using:Fooxboy.MusicX.Uwp.Models">

    <DataTemplate
        x:Name="PlaylistDataTemplate"
        x:DataType="models:Album"
        x:DefaultBindMode="TwoWay">

        <Grid>
            <controls:PlaylistControl
                Width="200"
                Height="200"
                Album="{Binding}" />
        </Grid>

    </DataTemplate>

</ResourceDictionary>
