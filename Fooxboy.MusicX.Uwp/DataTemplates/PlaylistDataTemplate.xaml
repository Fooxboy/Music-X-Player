<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Fooxboy.MusicX.Uwp.DataTemplates.PlaylistDataTemplateCode"
    xmlns:models="using:Fooxboy.MusicX.Uwp.Models"
    xmlns:controls="using:Fooxboy.MusicX.Uwp.Resources.Controls"
    xmlns:local="using:Fooxboy.MusicX.Uwp.DataTemplates">

    <DataTemplate x:Name="PlaylistDataTemplate" 
                  x:DataType="models:Album"
                  x:DefaultBindMode="TwoWay">

        <Grid>
            <controls:PlaylistControl Height="200" Width="200" Album="{Binding}"/>
        </Grid>

    </DataTemplate>
    
</ResourceDictionary>
