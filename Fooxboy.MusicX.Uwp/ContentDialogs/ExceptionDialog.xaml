<ContentDialog
    x:Class="Fooxboy.MusicX.Uwp.Resources.ContentDialogs.ExceptionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Resources.ContentDialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Произошла ошибка"
    CornerRadius="5"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="ОК"
    mc:Ignorable="d">
    <Grid>

        <StackPanel>
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Text="{x:Bind TitleText}"
                TextWrapping="Wrap" />
            <TextBlock Text="{x:Bind Info}" TextWrapping="Wrap" />
            <Button
                x:Name="showButton"
                Margin="10,10,0,10"
                Click="Button_Click"
                Content="Показать подробности"
                Style="{ThemeResource StandardButtonStyle}" />
            <TextBlock
                x:Name="stackText"
                Text="{x:Bind ExceptionString}"
                TextWrapping="Wrap"
                Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</ContentDialog>
