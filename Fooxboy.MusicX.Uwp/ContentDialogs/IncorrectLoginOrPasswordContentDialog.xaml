<ContentDialog
    x:Class="Fooxboy.MusicX.Uwp.Resources.ContentDialogs.IncorrectLoginOrPasswordContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Resources.ContentDialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Неверный логин или пароль"
    CornerRadius="5"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="ОК"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock
                Margin="0,0,0,0"
                FontWeight="Bold"
                Text="Вы указали неверный логин или пароль" />
            <TextBlock
                Foreground="{ThemeResource SubText}"
                Text="Если Вы забыли свой пароль, востановите его на главной странице ВКонтакте."
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</ContentDialog>
