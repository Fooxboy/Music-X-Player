<ContentDialog
    x:Class="Fooxboy.MusicX.Uwp.Resources.ContentDialogs.ErrorConnectContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Resources.ContentDialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Ошибка подключения к серверу"
    CornerRadius="5"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="ОК"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <FontIcon
                FontFamily="Segoe MDL2 Assets"
                FontSize="40"
                Glyph="&#xF476;" />
            <TextBlock Margin="0,20,0,0" Text="Отсутствует подключение к интернету" />
            <TextBlock Foreground="{ThemeResource SubText}" Text="Или сервер временно недоступен" />
        </StackPanel>
    </Grid>
</ContentDialog>
