<ContentDialog
    x:Class="Fooxboy.MusicX.Uwp.Resources.ContentDialogs.TwoFactorAuthContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Resources.ContentDialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Двойная аунтификация"
    CornerRadius="5"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="Подтвердить"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock Text="Код подтверждения отправлен." TextWrapping="Wrap" />
            <TextBlock
                Margin="0,5,0,0"
                Foreground="{ThemeResource SubText}"
                Text="Вам должен прийти код подтверждения в личные сообщения ВКонтакте или на номер мобильного телефона."
                TextWrapping="Wrap" />
            <TextBox
                x:Name="TextBox"
                Width="300"
                Margin="0,30,0,0"
                PlaceholderText="Введите код подтверждения"
                Style="{ThemeResource StandardTextBoxStyle}" />
        </StackPanel>
    </Grid>
</ContentDialog>
