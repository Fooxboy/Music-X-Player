    xmlns:local="using:Fooxboy.MusicX.Uwp.Styles"
    xmlns:media="using:Windows.UI.Xaml.Media">

    <media:AcrylicBrush
        x:Key="HeaderAcrylicBrush"
        BackgroundSource="Backdrop"
        FallbackColor="White"
        TintColor="Thistle"
        TintOpacity="0.2" />

    <media:AcrylicBrush
        x:Key="BottomAcrylicBrush"
        BackgroundSource="Backdrop"
        FallbackColor="White"
        TintColor="Thistle"
        TintOpacity="0.2" />

    <media:AcrylicBrush
        x:Key="NotificationAcrylicBrush"
        BackgroundSource="Backdrop"
        FallbackColor="White"
        TintColor="Thistle"
        TintOpacity="0.2" />

   
</ResourceDictionary>
