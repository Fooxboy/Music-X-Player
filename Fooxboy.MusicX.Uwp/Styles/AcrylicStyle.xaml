<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Styles"
    xmlns:media="using:Windows.UI.Xaml.Media">

    <media:AcrylicBrush x:Key="HeaderAcrylicBrush"
                        BackgroundSource="Backdrop"
                        TintOpacity="0.2" 
                        TintColor="Thistle" 
                        FallbackColor="{ThemeResource SystemColorBackgroundColor}" />

    <media:AcrylicBrush x:Key="BottomAcrylicBrush"
                        BackgroundSource="Backdrop"
                        TintOpacity="0.1" 
                        TintColor="Thistle" 
                        FallbackColor="{ThemeResource SystemColorBackgroundColor}" />
</ResourceDictionary>
