<ContentDialog
    x:Class="Fooxboy.MusicX.Uwp.Resources.ContentDialogs.TwoFactorAuthContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Resources.ContentDialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Двухфакторная авторизация"
    PrimaryButtonText="Подтвердить">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="На Ваш номер телефона должено прийти смс сообщений с кодом подтверждения."/>
            <TextBlock Text="Если сообщение не пришло, проверте в личных сообщениях ВКонтакте."/>
            <TextBox x:Name="TextBox" Margin="0 30 0 0" Style="{ThemeResource TextBoxLoginStyle}"
                     PlaceholderText="Введите код подтверждения"/>
        </StackPanel>
    </Grid>
</ContentDialog>
