<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Fooxboy.MusicX.Uwp.Models"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    x:Class="Fooxboy.MusicX.Uwp.Resources.Templates.PlaylistResourceTemplate"
    xmlns:myControls="using:Fooxboy.MusicX.Uwp.Resources.Controls"
    >

    <DataTemplate x:Key="PlaylistTemplate"
                  x:DefaultBindMode="TwoWay"
                  x:DataType="models:AudioPlaylist">
        <Grid Margin="32 17 32 0" animations:Connected.Key="cover">
            <myControls:PlaylistControl Playlist="{Binding}"/>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>
