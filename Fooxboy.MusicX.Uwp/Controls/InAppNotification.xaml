<UserControl
    x:Class="Fooxboy.MusicX.Uwp.Resources.Controls.InAppNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Resources.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Height="60" Width="320">
        <controls:DropShadowPanel
                    Grid.Column="0"
                    Width="300"
                    Height="50"
                    HorizontalAlignment="Left"
                    BlurRadius="20"
                    OffsetX="0"
                    OffsetY="0"
                    Opacity="0.5"
                    ShadowOpacity="1">
            <Border
                        Width="300"
                        Height="50"
                        Background="White"
                        CornerRadius="3" />
        </controls:DropShadowPanel>

        <Rectangle Width="50" Fill="{ThemeResource NotificationBackgroundColor}" Height="300"/>
    </Grid>
</UserControl>
