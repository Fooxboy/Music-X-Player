<Page
    x:Class="Fooxboy.MusicX.Uwp.Views.RootWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Views"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource BackgroundApp}">

    <Grid>
        <Frame x:Name="Root" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Rectangle Height="80" VerticalAlignment="Top" Fill="{ThemeResource HeaderAcrylicBrush}"/>
        <Grid Height="80" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="15 0 0 0" Grid.Column="0" Orientation="Horizontal" Grid.Row="1">
                
                <StackPanel Orientation="Vertical">
                    <Button Style="{StaticResource MenuButton}" >
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontSize="25" FontFamily="Segoe MDL2 Assets" Glyph="&#xE80F;" />
                            <TextBlock FontSize="20" Margin="10 0 0 0" Foreground="{ThemeResource MainTextColor}" Text="Главная"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Margin="0 6 0 0" Visibility="Visible" Height="5" Fill="{ThemeResource SystemAccentColor}"/>
                </StackPanel>

                <StackPanel Margin="15 0 0 0" Orientation="Vertical">
                    <Button Style="{StaticResource MenuButton}" >
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontSize="25" FontFamily="Segoe MDL2 Assets" Glyph="&#xEC4F;" />
                            <TextBlock FontSize="20" Margin="10 0 0 0" Foreground="{ThemeResource MainTextColor}" Text="Рекомендации"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Margin="0 6 0 0" Visibility="Collapsed" Height="5" Fill="{ThemeResource SystemAccentColor}"/>
                </StackPanel>

                <StackPanel Margin="15 0 0 0" Orientation="Vertical">
                    <Button Style="{StaticResource MenuButton}" >
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontSize="25" FontFamily="Segoe MDL2 Assets" Glyph="&#xE734;" />
                            <TextBlock FontSize="20" Margin="10 0 0 0" Foreground="{ThemeResource MainTextColor}" Text="Любимые исполнители"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Margin="0 6 0 0" Visibility="Collapsed" Height="5" Fill="{ThemeResource SystemAccentColor}"/>
                </StackPanel>

                <StackPanel Margin="15 0 0 0" Orientation="Vertical">
                    <Button Style="{StaticResource MenuButton}" >
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontSize="25" FontFamily="Segoe MDL2 Assets" Glyph="&#xE896;" />
                            <TextBlock FontSize="20" Margin="10 0 0 0" Foreground="{ThemeResource MainTextColor}" Text="Загрузки"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Margin="0 6 0 0" Visibility="Collapsed" Height="5" Fill="{ThemeResource SystemAccentColor}"/>
                </StackPanel>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                <PersonPicture Height="40"  Width="40"/>
                <Button FontSize="21" Margin="20 0 0 0" Background="Transparent"  CornerRadius="1" Height="40" Width="40"  FontFamily="Segoe MDL2 Assets" Content="&#xE712;" />
            </StackPanel>
        </Grid>

        
        <Grid Height="70" Grid.Row="1" Margin="100 0 100 20" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="4" RadiusX="15" RadiusY="15" Fill ="{ThemeResource HeaderAcrylicBrush}"/>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <toolkit:ImageEx Height="60" Width="60" 
                                HorizontalAlignment="Left"
                                Margin="15 0 0 0"
                                DecodePixelHeight="40"
                                DecodePixelWidth="40"
                                CornerRadius="3"
                                 Source="{x:Bind PlayerViewModel.Cover, Mode=TwoWay}"
                                Stretch="Fill"
                                IsCacheEnabled="False"
                                PlaceholderSource="ms-appx:///Assets/Images/placeholder-track.png" />

                
            </StackPanel>

            <Grid Grid.Column="0" Margin="84 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Margin="0 3 0 0"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Stretch"
                           FontWeight="Medium"
                           FontSize="22" 
                           Grid.Row="0" 
                           Text="{x:Bind PlayerViewModel.Title}"/>
                
                <TextBlock Margin="0 0 0 0" 
                           TextTrimming="CharacterEllipsis" 
                           HorizontalAlignment="Stretch"
                           Foreground="{ThemeResource ColorArtistText}"
                           FontSize="19"
                           Grid.Row="1" 
                           Text="{x:Bind PlayerViewModel.Artist}"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Background="Transparent" 
                        CornerRadius="99"
                        FontSize="19"
                        Height="42"
                        Width="42" 
                        FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE1CD;" />

                <Button Grid.Column="2" 
                        Background="Transparent" 
                        CornerRadius="99"
                        FontSize="19" 
                        Command="{x:Bind PlayerViewModel.PreviousCommand}"
                        Height="42"
                        Width="42"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE892;" />

                <Grid Grid.Column="3" >
                    <Button Grid.Column="1" Visibility="{x:Bind PlayerViewModel.IsPlay}" Command="{x:Bind PlayerViewModel.PlayCommand}" Background="Transparent" CornerRadius="99" FontSize="20" Height="43" Width="43" FontFamily="Segoe MDL2 Assets" Content="&#xE768;" />
                    <Button Grid.Column="0" Visibility="{x:Bind PlayerViewModel.VisibilityPause}" Command="{x:Bind PlayerViewModel.PauseCommand}" Background="Transparent" CornerRadius="99" FontSize="20" Height="43" Width="43" FontFamily="Segoe MDL2 Assets" Content="&#xE769;" />
                </Grid>

                <Button Grid.Column="4"
                        Background="Transparent" 
                        CornerRadius="99"
                        FontSize="19"
                        Command="{x:Bind PlayerViewModel.NextCommand}"
                        Height="42"
                        Width="42"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE893;" />

                <Button Grid.Column="5"
                        Background="Transparent"
                        CornerRadius="99"
                        FontSize="19"
                        Height="42"
                        Width="42"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE8B1;" />
            </Grid>

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{x:Bind PlayerViewModel.Time, Mode=TwoWay}" VerticalAlignment="Center"/>
                <Slider Margin="5 0 5 0" Style="{StaticResource SliderPlayerStyle}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Maximum="{x:Bind PlayerViewModel.SecondsAll, Mode=TwoWay}"
                        Grid.Column="1"
                    Value="{x:Bind PlayerViewModel.Seconds}"/>
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{x:Bind PlayerViewModel.AllTime, Mode=TwoWay}"/>
                
            </Grid>


        </Grid>
    </Grid>
</Page>
