<Page
    x:Class="Fooxboy.MusicX.Uwp.Views.PlaylistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Fooxboy.MusicX.Uwp.Models"
    Background="{ThemeResource BackgroundApp}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="200" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{ThemeResource ColorSettings}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <controls:DropShadowPanel
                x:Name="AlbumCoverShadow"
                Grid.Row="0"
                Width="150"
                Height="150"
                Margin="0,25,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BlurRadius="20"
                OffsetY="0"
                Opacity="0.5"
                ShadowOpacity="1">

                <Border
                    Width="150"
                    Height="150"
                    Background="Black" />
            </controls:DropShadowPanel>

            <Image
                x:Name="coverImage"
                Grid.Row="0"
                Width="150"
                Height="150"
                Margin="25"
                animations:Connected.Key="cover"
                Stretch="Fill">
                <Image.Source>
                    <BitmapImage
                        DecodePixelHeight="150"
                        DecodePixelWidth="150"
                        UriSource="{x:Bind PlaylistViewModel.Playlist.Cover, Mode=TwoWay}" />
                </Image.Source>
            </Image>

            <Grid Grid.Column="1" animations:Connected.AnchorElement="{x:Bind coverImage}">

                <StackPanel
                    Margin="0,0,0,40"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <TextBlock
                        FontFamily="Calibri"
                        FontSize="42"
                        FontWeight="Bold"
                        Text="{x:Bind PlaylistViewModel.Playlist.Name, Mode=TwoWay}" />

                    <TextBlock
                        Margin="10,25,0,0"
                        FontWeight="Bold"
                        Foreground="{ThemeResource SubText}"
                        Text="{x:Bind PlaylistViewModel.PLTrackCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel
                    Margin="0,20,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource SubHeaderText}"
                        Text="{x:Bind PlaylistViewModel.Playlist.Artist}"
                        Visibility="{x:Bind PlaylistViewModel.VisibilityInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SubText}"
                        Text="•"
                        Visibility="{x:Bind PlaylistViewModel.VisibilityInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SubText}"
                        Text="{x:Bind PlaylistViewModel.Playlist.Genre}"
                        Visibility="{x:Bind PlaylistViewModel.VisibilityInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SubText}"
                        Text="•"
                        Visibility="{x:Bind PlaylistViewModel.VisibilityInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SubText}"
                        Text="{x:Bind PlaylistViewModel.Playlist.Year}"
                        Visibility="{x:Bind PlaylistViewModel.VisibilityInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel
                    Margin="0,85,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Grid.Row="1"
                        Width="100"
                        Height="30"
                        Padding="0"
                        BorderThickness="0"
                        IsEnabled="False"
                        Style="{ThemeResource ButtonLoginStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="17"
                                    Glyph="&#xE8B1;" />

                                <TextBlock
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    Text="Смешать" />
                            </Grid>
                        </Button.Content>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Width="100"
                        Height="30"
                        Margin="10,0,0,0"
                        Padding="0"
                        BorderThickness="0"
                        Command="{x:Bind PlaylistViewModel.EditPlaylist}"
                        Style="{ThemeResource ButtonLoginStyle}">

                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="17"
                                    Glyph="&#xE70F;" />

                                <TextBlock
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    Text="Изменить" />
                            </Grid>
                        </Button.Content>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Width="100"
                        Height="30"
                        Margin="10,0,0,0"
                        Padding="0"
                        BorderThickness="0"
                        Command="{x:Bind PlaylistViewModel.DownloadPlaylist}"
                        IsEnabled="{x:Bind PlaylistViewModel.DownloadIsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{ThemeResource ButtonLoginStyle}">

                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="17"
                                    Glyph="&#xE896;" />

                                <TextBlock
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    Text="Скачать" />
                            </Grid>
                        </Button.Content>
                    </Button>

                </StackPanel>

                <TextBlock
                    Margin="10,0,0,10"
                    VerticalAlignment="Bottom"
                    Foreground="{ThemeResource SubText}"
                    Text="{x:Bind PlaylistViewModel.Playlist.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Visibility="{x:Bind PlaylistViewModel.VisibilityDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

        </Grid>



        <ListView
            x:Name="MusicListView"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            ItemClick="{x:Bind PlaylistViewModel.ListViewMusic_Click}"
            ItemContainerStyle="{StaticResource ListViewItemContainerStyle}"
            ItemTemplate="{ThemeResource TrackTemplate}"
            ItemsSource="{x:Bind PlaylistViewModel.Playlist.TracksFiles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{x:Bind PlaylistViewModel.SelectedAudioFile, Mode=TwoWay}"
            Style="{StaticResource ListViewStyle}"
            Tapped="{x:Bind PlaylistViewModel.MusicListView_Tapped}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>



        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{x:Bind PlaylistViewModel.VisibilotyNoTrack, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <FontIcon
                HorizontalAlignment="Center"
                FontFamily="Segoe MDL2 Assets"
                FontSize="90"
                Glyph="&#xE8D6;" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30                        "
                FontWeight="Bold"
                Text="Плейлист пуст" />
            <TextBlock
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                FontSize="20"
                Foreground="{ThemeResource SubHeaderText}"
                Text="Как добавить трек в плейлист?" />
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="{ThemeResource SubText}"
                Text="Просто кликните правой кнопкой по треку и нажмите Добавить -&gt; В плейлист" />
        </StackPanel>
        <ProgressRing
            Grid.Row="1"
            Width="70"
            Height="70"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="{x:Bind PlaylistViewModel.VisibilityIsLoading, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Visibility="Visible" />
    </Grid>
</Page>
