            <UI:AdControl
                Width="320"
                Height="50"
                AdUnitId="1100051155"
                ApplicationId="9ncjgg7b13q1" />

            <UI:AdControl
                Width="320"
                Height="50"
                Margin="30,0,0,0"
                AdUnitId="1100051155"
                ApplicationId="9ncjgg7b13q1" />

        </StackPanel>

    </Grid>
</Page>
