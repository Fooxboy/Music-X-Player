<local:WelcomeViewBase
    x:Class="Fooxboy.MusicX.Uwp.Views.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core" 
    Background="{ThemeResource BackgroundApp}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image
            Grid.RowSpan="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Source="ms-appx:///Assets/Images/welcome-background1.jpg"
            Stretch="UniformToFill" />

        <Rectangle
            Grid.RowSpan="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Fill="White"
            Opacity="0.6" />

        <Image
            Grid.Row="1"
            Width="150"
            Height="150"
            Margin="0,0,0,30"
            HorizontalAlignment="Center">
            <Image.Source>
                <BitmapImage
                    DecodePixelHeight="150"
                    DecodePixelWidth="150"
                    UriSource="ms-appx:///Assets/Images/logo-black.png" />
            </Image.Source>
        </Image>



        <TextBlock
            x:Name="WelcomeText"
            Grid.Row="2"
            HorizontalAlignment="Center"
            FontSize="32"
            FontWeight="Bold"
            Text="Добро пожаловать в MusicX 2.0" />

        <TextBlock
            x:Name="InfoText"
            Grid.Row="3"
            HorizontalAlignment="Center"
            FontSize="22"
            Foreground="{ThemeResource SubText}"
            Text="Новый дизайн. Новые возможности. Новый опыт." >
            <i:Interaction.Behaviors>
                <ic:DataTriggerBehavior Binding="{Binding Loading}" Value="True">
                    <ic:ChangePropertyAction TargetObject="{Binding}" PropertyName="Text" Value="Music X готовится к первому запуску. Это не займет много времени."/>
                </ic:DataTriggerBehavior>
            </i:Interaction.Behaviors>
        </TextBlock>

        <!-- <ToggleSwitch
            x:Name="ToggleButton"
            Grid.Row="4"
            HorizontalAlignment="Center"
            Header="Использовать папку Музыка по умолчанию"
            OffContent="Нет"
            OnContent="Да" />-->

        <ProgressRing
            x:Name="ProgressRing"
            Grid.Row="4"
            Width="50"
            Height="50"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            IsActive="False" />

        <Button
            x:Name="StartButton"
            Grid.Row="4"
            Width="130"
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            Opacity="0.9"
            Style="{StaticResource AcceptButtonStyle}">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Продолжить" />
                    <FontIcon
                        Margin="5,0,0,0"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="12"
                        Glyph="&#xE09B;" />
                </StackPanel>
            </Button.Content>
        </Button>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="WelcomeText.FontSize" Value="32" />
                        <Setter Target="Start.FontSize" Value="22" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="Mobile">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="WelcomeText.FontSize" Value="26" />
                        <Setter Target="Start.FontSize" Value="19" />
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</local:WelcomeViewBase>
