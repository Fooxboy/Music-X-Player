<Page
    x:Class="Fooxboy.MusicX.Uwp.Views.VKontakte.AuthView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Views.VKontakte"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource BackgroundApp}"
    mc:Ignorable="d">

    <Grid>

        <controls:DropShadowPanel
            Grid.Column="0"
            Width="400"
            Height="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BlurRadius="30"
            OffsetX="0"
            OffsetY="0"
            Opacity="0.5"
            ShadowOpacity="1">
            <Border
                Width="400"
                Height="500"
                Background="White"
                CornerRadius="3" />
        </controls:DropShadowPanel>

        <Rectangle
            Width="400"
            Height="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Fill="{ThemeResource BlockBackground}"
            RadiusX="3"
            RadiusY="3" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="100" Height="100">
                <Image.Source>
                    <BitmapImage
                        DecodePixelHeight="100"
                        DecodePixelWidth="100"
                        UriSource="/Assets/Images/vk-logo.png" />
                </Image.Source>
            </Image>

            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource SubText}"
                Text="Войдите в свой аккаунт ВКонтакте" />

            <TextBox
                Margin="0,30,0,0"
                PlaceholderText="Номер телефона или адрес электронной почты"
                Style="{StaticResource TextBoxLoginStyle}"
                Text="{x:Bind ViewModel.Login, Mode=TwoWay}" />
            <PasswordBox
                Margin="0,10,0,0"
                Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                PlaceholderText="Пароль"
                Style="{StaticResource PasswordBoxLoginStyle}" />
            <Grid HorizontalAlignment="Center">
                <Button
                    Width="100"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.LoginCommand}"
                    Content="Войти"
                    Style="{StaticResource ButtonLoginStyle}"
                    Visibility="{x:Bind ViewModel.VisibilityButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressRing
                    Width="40"
                    Height="40"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    IsActive="{x:Bind ViewModel.IsActiveProgressRing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </StackPanel>

        <TextBlock
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Foreground="{ThemeResource SubText}"
            Text="MusicX 2019" />
    </Grid>
</Page>
