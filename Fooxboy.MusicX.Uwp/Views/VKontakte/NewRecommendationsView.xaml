<Page
    x:Class="Fooxboy.MusicX.Uwp.Views.VKontakte.NewRecommendationsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Views.VKontakte"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource BackgroundApp}"
    mc:Ignorable="d">

    <Grid Margin="0,36,0,0">
        <StackPanel>
            <TextBlock
                Margin="30,0,0,0"
                FontFamily="Calibri"
                FontSize="42"
                FontWeight="ExtraBold"
                Text="Рекомендации" />

        </StackPanel>

        <ListView ItemsPanel="{StaticResource ListViewItemsPanelBlock}"
            Margin="0,50,0,0"
            HorizontalAlignment="Stretch"
            Background="{ThemeResource BackgroundApp}"
            Foreground="{ThemeResource BackgroundApp}"
            IsItemClickEnabled="False"
            ItemContainerStyle="{StaticResource ListViewItemRevealStyleBlocks}"
            ItemTemplate="{ThemeResource BlockTemplate}"
            ItemsSource="{x:Bind ViewModel.Blocks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ListViewStyleBlocks}">

        </ListView>

        <ProgressRing
            Width="50"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="{x:Bind ViewModel.IsLoading, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

    </Grid>
</Page>
