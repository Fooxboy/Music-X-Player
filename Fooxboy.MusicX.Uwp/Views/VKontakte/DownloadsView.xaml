<Page
    x:Class="Fooxboy.MusicX.Uwp.Views.VKontakte.DownloadsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fooxboy.MusicX.Uwp.Views.VKontakte"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource BackgroundApp}"
    mc:Ignorable="d">

    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextTrimming="WordEllipsis" FontWeight="Bold" HorizontalAlignment="Center" FontSize="30" Text="Загрузок больше нет."/>
            <TextBlock Foreground="{ThemeResource SubText}" Margin="0 20 0 0 " HorizontalAlignment="Center" TextTrimming="WordEllipsis" Text="Они не прошли жизненный отбор. Да, так бывает. Но не пугайтесь! Скоро они вернуться к нам в улучшенном виде!"/>
        </StackPanel>
    </Grid>
</Page>
