
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="100dp"
                android:background="@drawable/shadow">
    
                <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        app:riv_corner_radius="999dp"
                        android:padding="14dp"
                        android:src="@drawable/placeholder"
                        android:id="@+id/vk_pfp"
                />

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="100dp"
                        android:textSize="18dp"
                        android:text="Чайник с функцией жопа"
                        android:id="@+id/vkname"
                
                />
                <Button
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="24dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/exit" 
                        android:id="@+id/exit_btn"
                />
            </RelativeLayout>
    
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="7.5dp"
                            android:layout_height="115dp"
                            android:background="@drawable/shadow"
                android:visibility="gone"
            >
        
                <ImageView android:layout_width="70dp" 
                           android:layout_height="match_parent"
                           android:src="@drawable/androidicon_pro"
                />
                <TextView
                    android:textColor="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="70dp"
                        android:textSize="18dp"
                        android:text="Получите полную функциональность с Music X Pro (Нет, мы не наглые. Мы просто тоже люди и хотим кушоц.)"
                
                />
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="7.5dp"
                            android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="26dp"
                            android:background="@drawable/shadow">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:text="Палитра приложения"
        
                android:textSize="18dp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
        
                    <RadioButton
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Светлая"
                    android:checked="true"
                    />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="7.5dp"
                            android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="26dp"
                            android:background="@drawable/shadow">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:text="Музыка ВКонтакте"
        
                android:textSize="18dp"/>

                <CheckBox
                    android:id="@+id/streamtovk_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:text="Транслировать музыку в статус"
                android:layout_marginTop="30dp"/>

            </RelativeLayout>


            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="7.5dp"
                            android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="26dp"
                            android:background="@drawable/shadow">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:text="Я нашел баг"
                android:textSize="18dp"/>

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                android:text="Вы можете написать одному из разработчиков, чтобы сообщить о нем :)"/>

            </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="7.5dp"
                            android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="26dp"
                            android:background="@drawable/shadow">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:text="Разработчики"
                android:textSize="18dp"/>
                <Button
                    android:id="@+id/fooxboy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/button"
                android:text="fooxboy"
                android:textColor="#FFF"
                android:paddingHorizontal="30dp"/>
                <Button
                    android:id="@+id/dumbcat_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                    android:layout_marginLeft="130dp"
                android:background="@drawable/button"
                android:text="1uckyCat"
                android:textColor="#FFF"
                android:paddingHorizontal="30dp"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="7.5dp"
                            android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="26dp"
                            android:background="@drawable/shadow">

                <TextView
                    android:id="@+id/settings_version"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:text="Версия приложения 1.0 Release"
                android:textSize="18dp"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>